<UserControl x:Class="InventoryMS.View.ProductUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InventoryMS.View" xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="750">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>


    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Page Title -->
            <RowDefinition Height="Auto"/>
            <!-- Add Button -->
            <RowDefinition Height="Auto"/>
            <!-- Tabs -->
            <RowDefinition Height="Auto"/>
            <!-- Separator -->
            <RowDefinition Height="Auto"/>
            <!-- Filter & Counter -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Pagination -->
        </Grid.RowDefinitions>

        <!-- Page Title -->
        <TextBlock Text="Product" Grid.Row="0" FontSize="32" FontWeight="SemiBold" 
                   Foreground="Black" Margin="0 20 0 0"/>

        <!-- Add Button -->
        <Button Grid.Row="1" Style="{StaticResource addButton}" Click="AddProduct_Click">
            <StackPanel Orientation="Horizontal">
                <Icon:PackIconMaterial Kind="Plus" VerticalAlignment="Center" Width="11" Height="11" Margin="0 1 8 0"/>
                <TextBlock Text="Add New Product"/>
            </StackPanel>
        </Button>

        <!-- Separator -->
        <Separator Grid.Row="3" Height="1" Background="White" Margin="0 -1 0 10"/>

        <!-- Tab Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0 10 0 0">
            <Button Content="Product Categories" Style="{StaticResource tabButton}" Width="150"/>
            <Button Content="Best Selling" Style="{StaticResource tabButton}" Width="130"/>
            <Button Content="Latest Product" Style="{StaticResource tabButton}" Width="130"/>
            <Button Content="Top Rated" Style="{StaticResource tabButton}" Width="130"/>
            <Button Content="Discounted Items" Style="{StaticResource tabButton}" Width="130"/>
        </StackPanel>

        <!-- Counter & Filter -->
        <Grid Grid.Row="4">
            <TextBlock Text="68 Club Staff" FontSize="18" FontWeight="SemiBold" Foreground="Black" HorizontalAlignment="Left"/>
            <TextBlock Text="Filter by" FontSize="18" FontWeight="SemiBold" Margin="0 0 215 0" 
                       Foreground="Black" HorizontalAlignment="Right"/>

            <!-- Filter Textbox -->
            <Grid Width="200" HorizontalAlignment="Right">
                <TextBlock Margin="15 0" VerticalAlignment="Center" Foreground="#b0b9c6" IsHitTestVisible="False"
                           Panel.ZIndex="1" Text="Search in Member ..." Visibility="{Binding ElementName=txtFilter, Path=Text.IsEmpty,Converter={StaticResource BoolToVis}}"/>
                <TextBox x:Name="txtFilter" Style="{StaticResource textboxSearch}"/>
            </Grid>
        </Grid>

        <!-- Product DataGrid -->
        <DataGrid x:Name="ProductGrid" Grid.Row="5" AutoGenerateColumns="False" HeadersVisibility="Column"
                  CanUserAddRows="False" Margin="0,10,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Product Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="150"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="100"/>
                <DataGridTextColumn Header="Stock" Binding="{Binding Stock}" Width="100"/>
                <DataGridTemplateColumn Header="Actions" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Edit" Margin="5,0" Padding="5,2" Click="EditProduct_Click"/>
                                <Button Content="Delete" Foreground="Red" Padding="5,2" Click="DeleteProduct_Click"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Pagination -->
        <Border Grid.Row="6" HorizontalAlignment="Right" BorderBrush="White" BorderThickness="1"
                CornerRadius="5" Padding="5" Background="White" Margin="0 10 10 10">
            <StackPanel Orientation="Horizontal">
                <Button Style="{StaticResource pagingButton}">
                    <Icon:PackIconMaterial Kind="ChevronLeft" Style="{StaticResource pagingButtonIcon}"/>
                </Button>
                <Rectangle Width="1" Fill="White" Margin="3 7"/>
                <Button Style="{StaticResource pagingButton}" Content="1"/>
                <Button Style="{StaticResource pagingButton}" Content="2" Background="Gray" Foreground="White"/>
                <Button Style="{StaticResource pagingButton}" Content="3"/>
                <TextBlock Text="..." Foreground="Gray" VerticalAlignment="Center" FontSize="15" Margin="10 0"/>
                <Button Style="{StaticResource pagingButton}" Content="7"/>
                <Button Style="{StaticResource pagingButton}" Content="8"/>
                <Button Style="{StaticResource pagingButton}" Content="9"/>
                <Rectangle Width="1" Fill="White" Margin="3 7"/>
                <Button Style="{StaticResource pagingButton}">
                    <Icon:PackIconMaterial Kind="ChevronRight" Style="{StaticResource pagingButtonIcon}"/>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
