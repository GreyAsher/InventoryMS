<UserControl x:Class="InventoryMS.View.DashboardUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InventoryMS.View"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="750">
    <Grid Background="#f5f5f5">

        <!-- Define Grid Structure -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Main Content -->
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Background="#2C3E50" Width="200" Height="Auto">
            <TextBlock Text="Dashboard" Foreground="White" FontSize="22" 
                       FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>

            <Button Content="Home" Style="{StaticResource SidebarButtonStyle}" Tag="Home"
                    Click="SidebarButton_Click"/>
            <Button Content="Reports" Style="{StaticResource SidebarButtonStyle}" Tag="Reports"
                    Click="SidebarButton_Click"/>
            <Button Content="Settings" Style="{StaticResource SidebarButtonStyle}" Tag="Settings"
                    Click="SidebarButton_Click"/>
            <Button Content="Logout" Style="{StaticResource SidebarButtonStyle}" Tag="Logout"
                    Click="SidebarButton_Click"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Column="1" Margin="10">

            <!-- Top Bar -->
            <DockPanel LastChildFill="True">
                <TextBlock Text="Welcome, User!" FontSize="18" FontWeight="Bold" 
                           VerticalAlignment="Center" DockPanel.Dock="Left"/>

                <Button Content="Profile" Width="80" Margin="0,0,10,0" HorizontalAlignment="Right"/>
            </DockPanel>

            <!-- Dynamic Content Area -->
            <Border Background="White" CornerRadius="10" Margin="10" Padding="20">
                <TextBlock x:Name="MainContentText" Text="Select an option from the sidebar"
                           FontSize="16" Foreground="Gray"/>
            </Border>
        </Grid>

    </Grid>

</UserControl>
